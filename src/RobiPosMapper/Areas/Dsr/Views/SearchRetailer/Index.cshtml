            //Search By Retailer Id
            $('#SearchByRetailerId').click(function (e) {
                e.preventDefault();
                var $button = $(this);
                var $searchInput = $(this).closest('form').find('#RetailerId');
                var retailerId =$.trim( $searchInput.val());
                if (retailerId=='') {
                    //alert('Please enter retailer id.');
                    $.modal('<h3 style="color:red;">Please enter retailer id.</h3>');
                    return;
                }

                if (isNaN(retailerId)) {
                    //alert('You entered an invalid Retailer Id. It must be numeric.');
                    $.modal('<h3 style="color:red;">You entered an invalid Retailer Id. It must be numeric.</h3>');
                    return;
                }

                var fd = new FormData(); fd.append('RetailerId', retailerId); fd.append("SessionId",$("#SessionId").val());
                //ajax call-->
                var urlData = 'SearchRetailer/SearchByRetailerId';
                $.ajax({
                    url: urlData,
                    type: "POST",
                    data: fd,
                    processData: false,  // tell jQuery not to process the data
                    contentType: false,   // tell jQuery not to set contentType
                    beforeSend: function () {
                        $($button).attr('disabled', 'disabled');
                        $($button).html('Working...');
                    },
                    success: function (response) {
                        if (response.SearchResult == 'notfound') {
                            $.modal('<h3 style="color:red;">Retailer Id not found in database.</h3>');
                            $($button).removeAttr("disabled");
                            $($button).html('Search');
                        }
                        else if (response.SearchResult == 'systemerror') {
                            $.modal('<h3 style="color:red;">Error in searching Retailer Id. Please try again.</h3>');
                            $($button).removeAttr("disabled");
                            $($button).html('Search');
                        }
                        else if (response.SearchResult == 'found') {
                            $button.html('Retailer found. Please wait..');
                            window.location = response.url;
                        }
                        else if (response.SearchResult == 'sessiontimeout') {
                            console.log(response.url);
                            window.location = response.url;
                        }
                        else if (response.SearchResult == 'usererror') {
                            $.modal('<h3 style="color:red;">' + response.ErrorDetail + '</h3>');
                            $($button).removeAttr("disabled");
                            $($button).html('Search');
                        }
                        //else if (response.SearchResult == 'dsrmismatch') {
                        //    $.modal('<h3 style="color:red;">Unauthorized access. This retailer belongs to other DSR.</h3>');
                        //    $($button).removeAttr("disabled");
                        //    $($button).html('Search');
                        //}
                    },
